<div class="aligner full-height">
  <div class="login box theme--default aligner__item">
    <ul class="list--horiz">
      <li class="list--horiz__item"><%= link_to "Log in", new_session_path(resource_name) %></li>
      <li class="list--horiz__item"><%= link_to "Sign up", new_registration_path(resource_name) %></li>
    </ul>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-element">
          <%= f.label :email, class: 'form-element__label' %>
          <div class="form-element__control">
            <%= f.email_field :email, autofocus: true, placeholder: 'email@sendero.com' %>
          </div>
        </div>

        <div class="form-element">
          <%= f.label :password, class: 'form-element__label'%>
          <div class="form-element__control">
            <%= f.password_field :password, autocomplete: "off", placeholder: 'password' %>
          </div>
        </div>

      <div class="form-element">
        <% if devise_mapping.rememberable? -%>
          <span class="checkbox">
            <%= f.check_box :remember_me, class: 'checkbox__field', id: 'checkbox--remember', name: 'checkbox', type: 'checkbox' %>
            <%= f.label :remember_me, class: 'checkbox__label', for: 'checkbox--remember' %>
          </span>
        <% end -%>
      </div>

      <div class="form-element">
        <%= f.submit "Log in", class: 'btn--fit' %>
      </div>

    <% end %>

    <%= link_to "Forgot your password?", new_password_path(resource_name) %>


  </div>
</div>
