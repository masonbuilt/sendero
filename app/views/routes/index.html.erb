<% if current_user %>
  <%= "Hi, #{current_user.email}" %><br>
  <%= link_to "Log out", destroy_user_session_path, method: :delete %><br>
<% else %>
  <%= link_to "Log in", new_user_session_path %><br>
  <%= link_to "Register", new_user_registration_path %><br>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Routes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.name %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Route', new_route_path %>
